<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
 
       <!-- OmniStyle -->
    <Preference
         android:key="omni_theme_select_activity"
         android:title="@string/theme_select_title"
         android:icon="@drawable/ic_themes"
         android:summary="@string/theme_select_summary"
         android:persistent="false" >
         <intent android:action="android.intent.action.MAIN"
                 android:targetPackage="org.omnirom.omnistyle"
                 android:targetClass="org.omnirom.omnistyle.BrowseThemesActivity" />
    </Preference>


    <PreferenceCategory
         android:key="pwr_title"
         android:title="@string/pwr_title" >

    <Preference
         android:key="powermenu"
         android:title="@string/powermenu_title"
         android:icon="@drawable/ic_powermenu"
         android:summary="@string/powermenu_summary"
         android:fragment="com.shell.extras.fragments.PowerMenu" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="battery_light_customization"
        android:title="@string/battery_notification_settings" >

    <Preference
        android:key="charging_light"
        android:fragment="com.shell.extras.fragments.BatteryLightSettings"
        android:icon="@drawable/ic_battery_light"
        android:title="@string/battery_light_settings" />

    </PreferenceCategory>

   <PreferenceCategory
        android:key="notification_misc"
        android:title="@string/notification_misc">

        <com.shell.extras.preferences.SystemSettingSwitchPreference 
            android:key="toast_icon" 
            android:title="@string/toast_icon_title" 
            android:summary="@string/toast_icon_summary" 
            android:defaultValue="true" /> 

        <com.shell.extras.preferences.SystemSettingSwitchPreference 
            android:key="force_expanded_notifications" 
            android:title="@string/force_expanded_notifications_title" 
            android:summary="@string/force_expanded_notifications_summary" /> 

    </PreferenceCategory>
</PreferenceScreen>
